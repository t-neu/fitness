{% extends 'base.html.twig' %}

{% block body %}
    <h1>GymList</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gymList.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gymList.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ gymList.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ gymList.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gymlist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gymlist_edit', { 'id': gymList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
